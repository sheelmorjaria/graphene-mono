# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/graphene-store
MONGODB_TEST_URI=mongodb://localhost:27017/graphene-store-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Service Configuration (AWS SES)
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
SES_FROM_EMAIL=noreply@yourdomain.com
SES_REGION=eu-west-2

# PayPal Configuration
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Bitcoin Configuration (Blockonomics)
BLOCKONOMICS_API_KEY=your-blockonomics-api-key
BLOCKONOMICS_CALLBACK_SECRET=your-blockonomics-callback-secret

# Monero Configuration (GloBee)
GLOBEE_API_KEY=your-globee-api-key
GLOBEE_SECRET=your-globee-webhook-secret
GLOBEE_API_URL=https://api.globee.com/v1

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
ADMIN_DEFAULT_EMAIL=admin@yourdomain.com
ADMIN_DEFAULT_PASSWORD=ChangeThisPassword123!

# Monitoring (Optional)
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
SENTRY_DSN=your-sentry-dsn

# Cloud Storage (Optional - for future use)
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=eu-west-2

# Redis Configuration (Optional - for future use)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
CLOUDWATCH_LOG_GROUP=graphene-store-logs
CLOUDWATCH_LOG_STREAM=backend

# Security
ENCRYPTION_KEY=your-32-character-encryption-key
HMAC_SECRET=your-hmac-secret-for-signatures

# Payment Processing
PAYMENT_PROCESSING_FEE_PERCENTAGE=2.9
PAYMENT_PROCESSING_FEE_FIXED=0.30
TAX_RATE=0.20

# Shipping
DEFAULT_SHIPPING_COST=9.99
EXPRESS_SHIPPING_COST=19.99
INTERNATIONAL_SHIPPING_COST=29.99

# Business Rules
ORDER_EXPIRY_HOURS=72
RETURN_WINDOW_DAYS=30
MIN_ORDER_VALUE=50.00
MAX_ORDER_VALUE=5000.00

# Feature Flags
ENABLE_BITCOIN_PAYMENTS=true
ENABLE_MONERO_PAYMENTS=true
ENABLE_PAYPAL_PAYMENTS=true
ENABLE_GUEST_CHECKOUT=true
ENABLE_ORDER_TRACKING=true
ENABLE_PRODUCT_REVIEWS=false
ENABLE_WISHLIST=false
ENABLE_NEWSLETTER=false

# Development/Testing
MOCK_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false
DEBUG_SQL=false
VERBOSE_ERRORS=false